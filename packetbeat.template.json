{
  "template" : "packetbeat-*",
  "settings" : {
    "index.refresh_interval" : "5s"
  },
  "mappings" : {
    "_default_" : {
      "_all": {
        "enabled": true,
        "norms": {
          "enabled": false
        }
      },
      "properties": {
        "request" : {
          "type": "string",
          "index" : "analyzed",
          "norms": {
            "enabled": false
          }
        },
        "response" : {
          "type": "string",
          "index" : "analyzed",
          "norms": {
            "enabled": false
          }
        },
        "params": {
          "type": "string",
          "index": "analyzed",
          "norms": {
            "enabled": false
          }
        },
        "timestamp": {
          "type": "date"
        },
        "client_location": {
          "type": "geo_point"
        },
        "query": {
          "type": "string",
          "index": "not_analyzed",
          "doc_values": true
        }
      },
      "dynamic_templates": [{
        "template1": {
          "match": "*",
          "mapping": {
            "type": "{dynamic_type}",
            "index": "not_analyzed",
            "doc_values": true,
            "ignore_above": 1024
          }
        }
      }]
    }
  }
}
